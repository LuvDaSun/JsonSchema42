{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "run file",
      "program": "${file}",
      "args": [],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/../*/out/**/*.js"],
      "preLaunchTask": "build",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "package file",
      "program": "${workspaceFolder}/src/program.ts",
      "args": [
        "package",
        "${file}",
        "--package-directory",
        ".package/file/${fileBasenameNoExtension}",
        "--package-name",
        "${fileBasenameNoExtension}"
      ],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/../*/out/**/*.js"],
      "preLaunchTask": "build",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "test fixture",
      "program": "${workspaceFolder}/src/program.ts",
      "args": [
        "test",
        "${file}",
        "--output-directory",
        ".package/test",
        "--package-name",
        "${fileBasenameNoExtension}"
      ],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/../*/out/**/*.js"],
      "preLaunchTask": "build",
      "outputCapture": "std"
    }
  ]
}
